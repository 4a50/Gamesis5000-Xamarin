<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gamesis5000.Views.GameDetailPage"
             xmlns:vm="clr-namespace:Gamesis5000.ViewModels"
             xmlns:local="clr-namespace:Gamesis5000.Views"     
             xmlns:mvvm="clr-namespace:MvvmHelpers;assembly=MvvmHelpers"
             xmlns:model="clr-namespace:Gamesis5000.Models"
             x:DataType="vm:GameDetailViewModel">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="AccentText">#000000</Color>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.BindingContext>
        <vm:GameDetailViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout>
        <Grid
            Padding="10,10,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/><!--0-->
                <RowDefinition Height="20"/>
