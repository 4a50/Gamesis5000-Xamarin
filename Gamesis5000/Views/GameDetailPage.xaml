                <RowDefinition Height="20"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="150"/>
                <RowDefinition Height="*"/><!--13-->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>                
                <ColumnDefinition Width="*"/><!--0-->
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/><!--5-->
            </Grid.ColumnDefinitions>
            <Image Source="{Binding searchGame.BoxArtUrlFront}"
                   Grid.RowSpan="10"
                   Grid.ColumnSpan="5"/>


            <Label Text="Title"
                   FontAttributes="Bold"
                   HorizontalOptions="CenterAndExpand"
                   Grid.Column="5"
                   Grid.ColumnSpan="4"
                   Grid.Row="0"/>
            <Label Text="{Binding searchGame.Name}"
                   Grid.Column="5"
                   Grid.ColumnSpan="4"
                   HorizontalOptions="StartAndExpand"
                   Grid.Row="1"
                   Grid.RowSpan="2"/>
            <Label Text="Game System"
                   FontAttributes="Bold"
                   HorizontalOptions="CenterAndExpand"                   
                   BackgroundColor="Azure"
                   Grid.Column="5"
                   Grid.ColumnSpan="4"
                   Grid.Row="3"/>
            <Label Text="{Binding searchGame.GameSystem}"
                   Grid.Column="5"
                   Grid.ColumnSpan="4"
                   HorizontalOptions="StartAndExpand"
                   Grid.Row="4"
                   Grid.RowSpan="2"/>
            <Label Text="Developer"
                   FontAttributes="Bold"
                   HorizontalOptions="CenterAndExpand"                   
                   BackgroundColor="Azure"
                   Grid.Column="5"
                   Grid.ColumnSpan="4"
                   Grid.Row="6"/>
            <Label Text="{Binding searchGame.Developer[0]}"
                   Grid.Column="5"
                   Grid.ColumnSpan="4"
                   HorizontalOptions="StartAndExpand"
                   Grid.Row="7"                   
                   />
            <Label Text="Publisher"
                   FontAttributes="Bold"
                   HorizontalOptions="CenterAndExpand"                   
                   BackgroundColor="Azure"
                   Grid.Column="5"
                   Grid.ColumnSpan="4"
                   Grid.Row="8"/>
            <Label Text="{Binding searchGame.Developer[0]}"
                   Grid.Column="5"
                   Grid.ColumnSpan="4"
                   HorizontalOptions="StartAndExpand"
                   Grid.Row="9"/>

            <Label 
                Grid.Row="10"
                Grid.ColumnSpan="9"
                FontSize="Medium"
                FontAttributes="Bold"
                HorizontalOptions="CenterAndExpand"
                Text="Overview"/>

            <BoxView Grid.Row="11"
                     Grid.RowSpan="2"
                Grid.Column="0"
                Grid.ColumnSpan="9"
                BackgroundColor="lightgray"                     
                VerticalOptions="FillAndExpand"
                HorizontalOptions="FillAndExpand"/>
                <ScrollView Grid.Row="11"
                            Grid.RowSpan="2"
                    Grid.Column="0"
            Grid.ColumnSpan="9">
                    <Label 
                    
                   Padding="5,5,5,5"
            Text="{Binding searchGame.Description}"
            
            TextColor="Black"
            VerticalOptions="FillAndExpand"
            HorizontalOptions="FillAndExpand"/>
                </ScrollView>
                <Button
                Text="Add"
                Grid.Row="13"
                Grid.ColumnSpan="4"/>
            <Button
                Text="Remove"       
                
                Grid.Row="13"
                Grid.Column="5"
                Grid.ColumnSpan="4"/>
            
