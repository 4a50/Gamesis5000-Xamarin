<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Gamesis5000.Views"
             x:Class="Gamesis5000.Views.HomePage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="AccentText">#000000</Color>
        </ResourceDictionary>
    </ContentPage.Resources>
    <StackLayout>
            <Label Text="This is the Home Page!"
                
                HorizontalOptions="CenterAndExpand" />

            <Button Text="View Inventory"                    
                    Command="{Binding NavigateCommand}"
                    CommandParameter="{x:Type local:ViewInventoyPage}"
                    />
               
            <Button Text="Inventory Validation"
                    Command="{Binding NavigateCommand}"
                    CommandParameter="{x:Type local:InvValidPage}">
                
            </Button>
            
            <Grid BackgroundColor="{StaticResource Accent}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>                    
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition 
                        Height="50"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Label Text="Search For a Title"                   
                   Grid.ColumnSpan="6"
                   Grid.Row="0"                       
                   VerticalOptions="FillAndExpand"                       
                   HorizontalOptions="FillAndExpand"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"
                       TextColor="{StaticResource AccentText}"
                   BackgroundColor="{StaticResource Primary}"
                       
                   FontSize="Title"/>
                
                <!-- RadioButtons and Labels-->

            <RadioButton
                    Grid.Row="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    GroupName="SearchFilter"
                    Content="Title"
                    Value="Title"/>            
                <RadioButton
                    Grid.Row="1"
                    Grid.Column="2"
                    Grid.ColumnSpan="2"
                    GroupName="SearchFilter"                    
                    Content="System"
                    Value="System"/>               
                
                <RadioButton
                    Grid.Row="1"
                    Grid.Column="4"                    
                    Grid.ColumnSpan="2"
                    GroupName="SearchFilter"                    
                    Content="Genre"
                    Value="Genre"/>
                <SearchBar                    
                    SearchButtonPressed="OnSearchButtonPressed"
                    Placeholder="Enter Criteria"
                    Grid.Row="2"
                    d
                    Grid.ColumnSpan="6"/>               
                       
                <RadioButton Grid.Row="3"     
                             Grid.Column="0"
                             Grid.ColumnSpan="3"                             
                             GroupName="SourceSearch"
                             Content="From Web"
                             />
                <RadioButton Grid.Column="3"
                             Grid.Row="3"
                             Grid.ColumnSpan="3"
                             GroupName="SourceSearch"
                             Content="From Database"/>
                
                <!-- This is for Visualization purposes only.  Delete when not needed -->

                <BoxView Grid.Row="4"
                         Grid.Column="0"
                         BackgroundColor="Black"
                         VerticalOptions="FillAndExpand"
                         HorizontalOptions="FillAndExpand"/>
                <BoxView Grid.Row="4"
                         Grid.Column="1"
                         BackgroundColor="Green"
                         VerticalOptions="FillAndExpand"
                         HorizontalOptions="FillAndExpand"/>
                <BoxView Grid.Row="4"
                         Grid.Column="2"
                         BackgroundColor="Black"
                         VerticalOptions="FillAndExpand"
                         HorizontalOptions="FillAndExpand"/>
                <BoxView Grid.Row="4"
                         Grid.Column="3"
                         BackgroundColor="Green"
                         VerticalOptions="FillAndExpand"
                         HorizontalOptions="FillAndExpand"/>
                <BoxView Grid.Row="4"
                         Grid.Column="4"
                         BackgroundColor="Black"
                         VerticalOptions="FillAndExpand"
                         HorizontalOptions="FillAndExpand"/>
                <BoxView Grid.Row="4"
                         Grid.Column="5"
                         BackgroundColor="Green"
                         VerticalOptions="FillAndExpand"
                         HorizontalOptions="FillAndExpand"/>
            </Grid>            
            <Label Text="(c)2021 4a50 Software"
                    VerticalOptions="Center"                    
                    HorizontalOptions="CenterAndExpand" />

        </StackLayout>
    <!--</ContentPage.Content>-->
</ContentPage>